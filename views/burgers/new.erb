<h1>Add a burger:</h1>

<form action="/burgers" method="POST">

<label for="burger_name">Name: </label>
<input type="text" id="name" name="name">

<select name="eatery_id" >
<% for eatery in @eateries %>

<option value="<%=eatery.id%>"><%=eatery.name%></option>
<%end%>
</select>

  
  <input type="submit" value="Add burger">
</form>